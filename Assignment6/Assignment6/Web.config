<?xml version="1.0"?>
<configuration>

  <system.web>
    <compilation debug="true" targetFramework="4.0" />
    <authentication mode="Forms">
      <forms loginUrl="~/Login.aspx"
          defaultUrl="~/Default.aspx"
          timeout="30"
          slidingExpiration="true" />
    </authentication>

    <authorization>
      <allow users="*" />
    </authorization>

    <!-- Session etc. -->
    <sessionState mode="InProc" timeout="20" />
    <customErrors mode="On" defaultRedirect="Error.aspx">
      <error statusCode="404" redirect="Error.aspx" />
      <error statusCode="500" redirect="Error.aspx" />
    </customErrors>
  </system.web>
	<location path="Member.aspx">
		<system.web>
			<authorization>
				<deny users="?" />
				<!-- deny anonymous -->
			</authorization>
		</system.web>
	</location>

	<!-- Protect Staff.aspx -->
	<location path="Staff.aspx">
		<system.web>
			<authorization>
				<deny users="?" />
			</authorization>
		</system.web>
	</location>
  <system.serviceModel>
    <bindings>
      <basicHttpBinding>
        <binding name="BasicHttpBinding_IWordCountService" />
      </basicHttpBinding>
    </bindings>
    <client>
      <endpoint address="http://webstrar45.fulton.asu.edu/Page0/WordCountService.svc"
        binding="basicHttpBinding" bindingConfiguration="BasicHttpBinding_IWordCountService"
        contract="WordCountRef.IWordCountService" name="BasicHttpBinding_IWordCountService" />
    </client>
    <behaviors>
      <serviceBehaviors>
        <behavior>
          <!-- To avoid disclosing metadata information, set the value below to false before deployment -->
          <serviceMetadata httpGetEnabled="true"/>
          <!-- To receive exception details in faults for debugging purposes, set the value below to true.  Set to false before deployment to avoid disclosing exception information -->
          <serviceDebug includeExceptionDetailInFaults="false"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <serviceHostingEnvironment multipleSiteBindingsEnabled="true" />
  </system.serviceModel>
 <system.webServer>
    <modules runAllManagedModulesForAllRequests="true"/>
    <handlers>
      <add name=".svc" verb="*" path="*.svc" type="System.ServiceModel.Activation.ServiceHttpHandlerFactory, System.ServiceModel.Activation,&#xD;&#xA;           Version=4.0.0.0, Culture=neutral, PublicKeyToken=31bf3856ad364e35"
                                                                              />
    </handlers>
    <!--
        To browse web app root directory during debugging, set the value below to true.
        Set to false before deployment to avoid disclosing web app folder information.
      -->
    <directoryBrowse enabled="true"/>
  </system.webServer>

</configuration>
